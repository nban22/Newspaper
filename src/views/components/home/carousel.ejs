<div class="w-100 w-md-75 mb-3 mb-md-0">
    <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner rounded">
            <% if (featuredArticles && featuredArticles.length > 0) { %>
                <% featuredArticles.forEach((article, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <a class="text-dark" style="flex: 0 1 250px" href="/article/<%- article._id %>" >
                            <img src="<%= article.thumbnail || 'https://via.placeholder.com/500x500' %>"
                             class="d-block w-100" style="height: 500px; object-fit:cover;"
                             alt="<%= article.title || 'Featured Article' %>"/>
                        </a>
                        <div class="carousel-caption d-block bg-opacity-75 bg-dark rounded">
                            <p class="card-text small mb-1">
                                <%= article.category_id.parent_id?.name ? `${article.category_id.parent_id.name} > ${article.category_id.name}` : article.category_id.name %>
                            </p>
                            <h5 class="fs-6 fs-md-5"><%= article.title || 'No Title' %></h5>
                            <p class="card-text small mb-2">
                                Ngày đăng: <%= article.publish_date %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
        <!-- Controls remain unchanged -->
    </div>
</div>
