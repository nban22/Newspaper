<div class="w-75">
    <div id="featuredCarousel" class="carousel slide top-0" data-bs-ride="carousel">
        <div class="carousel-inner rounded">
            <% if (featuredArticles && featuredArticles.length > 0) { %>
                <% featuredArticles.forEach((article, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <img src="<%= article.thumbnail || 'https://via.placeholder.com/800x400' %>"
                             class="d-block w-100" height="500px"
                             alt="<%= article.title || 'Featured Article' %>" />
                        <div class="carousel-caption d-none d-md-block bg-opacity-75 bg-dark rounded">
                            <p class="card-text small mb-1">
                                <%= article.category_id.parent_id?.name ? `${article.category_id.parent_id.name} > ${article.category_id.name}` : article.category_id.name %>
                            </p>
                            <h5><%= article.title || 'No Title' %></h5>
                            <p class="card-text small mb-2">
                                Ngày đăng: <%= article.publish_date %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No featured articles available.</p>
            <% } %>
        </div>
    
        <button class="carousel-control-prev bg-dark bg-opacity-50" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next bg-dark bg-opacity-50" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>