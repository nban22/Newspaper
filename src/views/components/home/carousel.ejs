<div id="featuredCarousel" class="carousel slide p-2 p-lg-5 mt-4" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% if (featuredArticles && featuredArticles?.length > 0) { %>
        <% featuredArticles.forEach((article, index) => { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <img src="<%= article?.thumbnail || 'https://via.placeholder.com/800x400' %>" 
                 class="d-block w-100" 
                 alt="<%= article?.title || 'Featured Article' %>" 
                 style="transition: transform 0.5s ease;">
            <div class="carousel-caption d-none d-md-block">
              <h5 class="text-light bg-dark p-2 rounded shadow-lg" style="opacity: 0.7;"><%= article?.title || 'No Title' %></h5>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="carousel-item active">
          <img src="https://via.placeholder.com/800x400" class="d-block w-100" alt="No Featured Articles">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="text-light bg-dark p-2 rounded shadow-lg">No Featured Articles Available</h5>
          </div>
        </div>
      <% } %>
    </div>
  
    <!-- Carousel Controls -->
    <button class="carousel-control-prev carousel-control-prev-custom" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    
    <button class="carousel-control-next carousel-control-next-custom" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  
  <!-- Optional Styling for Enhancements -->
  <style>
    .carousel-item img {
      transition: transform 0.5s ease;
    }
  
    .carousel-item:hover img {
      transform: scale(1.05);
    }
  
  
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
      background-color: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      padding: 10px;
      box-sizing: content-box;
      
    }
  
    .carousel-control-prev-icon:hover,
    .carousel-control-next-icon:hover {
      background-color: rgba(0, 0, 0, 0.8);
    }

    .carousel-control-prev-custom,
    .carousel-control-next-custom {
      background-color: rgba(0, 0, 0, 0.05);
    }
    .carousel-control-next-custom {
      border-radius: 0 50% 50% 0;
    }
    .carousel-control-prev-custom {
      border-radius: 50% 0 0 50%;
    }
    .carousel-control-prev-custom:hover,
    .carousel-control-next-custom:hover {
      background-color: rgba(0, 0, 0, 0.2);

    }
  </style>
  