<header class="p-3 text-bg-dark">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <img src="/images/logo.png" alt="newspaper logo" style="height: 60px; object-fit: contain" class="" />
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="#" class="nav-link px-2 text-dark">Trang chủ</a></li>
                <li><a href="#" class="nav-link px-2 text-dark">Giới thiệu</a></li>
                <li><a href="#" class="nav-link px-2 text-dark">Liên hệ</a></li>
                <% if (user && user.role === 'admin') {%>
                    <li><a href="/admin/categories" class="nav-link px-2 text-dark">Quản lý danh mục</a></li>
                    <li><a href="/admin/tags" class="nav-link px-2 text-dark">Quản lý nhãn tag</a></li>
                <% } %>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                <input
                    type="search"
                    class="form-control form-control-dark text-bg-dark"
                    placeholder="Tìm kiếm..."
                    aria-label="Search"
                />
            </form>  
            <% if (user) { %>
                <div class="dropdown text-end">
                    <a
                        href="#"
                        class="d-block link-dark text-decoration-none dropdown-toggle"
                        id="dropdownUser1"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        <img src="https://robohash.org/<%= user._id %>" alt="mdo" width="50" height="50" class="rounded-circle" style="box-shadow: 0 0 5px #000;" />
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Dashboard</a></li>
                        <li><a class="dropdown-item" href="#">Cài đặt</a></li>
                        <li><a class="dropdown-item" href="#">Hồ sơ</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <form action="/api/v1/logout" method="post" id="logout-form">
                                <button type="submit" class="dropdown-item">Đăng xuất</button>
                            </form>
                        </li>
                    </ul>
                </div>
            <% } else { %>
                <div class="text-end">
                    <a href="/login" ><button type="button" class="btn btn-outline-light mr-2 text-dark border-info">Đăng nhập</button></a>
                    <a href="/signup"><button type="button" class="btn btn-info mr-2">Đăng ký</button></a>
                </div>
            <% } %>
                       
        </div>
    </div>
</header>

