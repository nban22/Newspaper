<div class="px-2">
    <div class="d-flex align-items-center mb-2 mt-4">
        <div class="rect"></div>
        <a href="/latest_article" class="text-decoration-none text-dark">
            <h3 class="mb-0 fs-4">Mới nhất</h3>
        </a>
    </div>

    <div class="latest-articles-container">
        <div class="overflow-auto" style="max-height: 700px;">
            <ul class="d-flex flex-column gap-3 list-unstyled">
                <% latestArticle.forEach(article=> { %>
                    <li class="article-item">
                        <a href="/article/<%= article._id %>" 
                           class="article-link d-flex flex-column flex-md-row gap-3 border rounded p-3 text-decoration-none text-dark">
                            <div class="article-image-wrapper">
                                <img src="<%= article.thumbnail || 'https://via.placeholder.com/300x200' %>"
                                     alt="<%= article.title %>" 
                                     class="article-image rounded" />
                            </div>
                            <div class="article-content">
                                <h5 class="article-title fs-5 mb-2">
                                    <%= article.title || 'No Title' %>
                                </h5>
                                <p class="summary-text mb-2">
                                    <%- article.summary || 'No summary available' %>
                                </p>
                                <p class="card-text small mb-1">
                                    <%= article.category_id.parent_id?.name ? 
                                        `${article.category_id.parent_id.name} > ${article.category_id.name}` 
                                        : article.category_id.name %>
                                </p>
                                <p class="card-text small mb-2 text-muted">
                                    Ngày đăng: <%= article.publish_date %>
                                </p>
                                <% if (article.is_premium) { %>
                                    <span class="badge rounded-pill bg-warning text-dark premium-badge">Premium</span>
                                <% } %>
                            </div>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</div>
