<div>
    <div class="d-flex align-items-center mb-4">
        <div class="rect"></div>
        <a href="/latest_article" class="text-decoration-none text-dark">
            <h3 class="mb-0">Mới nhất</h3>
        </a>
    </div>
    
    <div class="row g-3">

        <div class="col-md-8 overflow-auto" style="max-height: 700px;">
            <ul class="d-flex flex-column gap-3 list-unstyled">
                <% latestArticle.forEach(article => { %>
                    <li class="" style="min-height: 80px;">
                        <a href="/article/<%= article._id %>" class="d-flex flex-wrap gap-3 border rounded justify-content-center p-3 text-decoration-none text-dark">
                            <div style="flex: 1 1 250px;">
                                <img src="<%= article.thumbnail || 'https://via.placeholder.com/300x200' %>"
                                        alt="<%= article.title %>" class="img-fluid rounded-top" />
                            </div>
                            <div class="card-body d-flex flex-column" style="flex: 1 1 200px;">
                                <h5 class="card-title mb-2"><%= article.title || 'No Title' %></h5>
                                <p class="card-text summary-text mb-2"><%- article.summary || 'No summary available' %></p>
                                <p class="card-text small mb-1">
                                    <%= article.category_id.parent_id?.name ? `${article.category_id.parent_id.name} > ${article.category_id.name}` : article.category_id.name %>
                                </p>
                                <p class="card-text small mb-2 text-muted">
                                    Ngày đăng: <%= article.publish_date %>
                                </p>
                                <% if (article.is_premium) { %>
                                    <span class="badge rounded-pill bg-warning text-dark">Premium</span>
                                <% } %>
                            </div>
                        </a>
                        </li>
                <% }) %>
            </ul>
        </div>
    
        <div class="col-md-4">
            <div class="border rounded">
                <h3 class="m-0 p-3">Top trending</h3>
                <ul class="trending list-unstyled list-group d-flex flex-column gap-3 p-2">
                    <li class="rounded">
                        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center" aria-current="true">
                            <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0" />
                            <div class="d-flex gap-2 w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-0">Bài viết mới nhất 1</h6>
                                    <p class="mb-0 opacity-75">Mô tả ngắn về bài viết.</p>
                                </div>
                                <small class="opacity-50 text-nowrap">now</small>
                            </div>
                        </a>
                    </li>
                    <li class="rounded">
                        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                            <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0" />
                            <div class="d-flex gap-2 w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-0">Bài viết mới nhất 2</h6>
                                    <p class="mb-0 opacity-75">Mô tả ngắn về bài viết.</p>
                                </div>
                                <small class="opacity-50 text-nowrap">now</small>
                            </div>
                        </a>
                    </li>
                    <li class="rounded">
                        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                            <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0" />
                            <div class="d-flex gap-2 w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-0">Bài viết mới nhất 3</h6>
                                    <p class="mb-0 opacity-75">Mô tả ngắn về bài viết.</p>
                                </div>
                                <small class="opacity-50 text-nowrap">now</small>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>