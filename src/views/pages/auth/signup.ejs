<div class="border-0 shadow rounded-3 my-auto bg-white">
    <div class="p-4 p-sm-5">
        <h5 class="card-title text-center mb-5 fw-light fs-5 fw-bold">Đăng ký</h5>
        <form id="signup-form">
            <div class="form-floating mb-3">
                <input
                    type="email"
                    class="form-control"
                    id="email"
                    placeholder="name@example.com"
                    name="email"
                    required
                />
                <label for="email">Nhập email</label>
            </div>
            <div class="form-floating mb-3">
                <input
                    type="password"
                    class="form-control"
                    id="password"
                    placeholder="Password"
                    name="password"
                    required
                />
                <label for="password">Nhập mật khẩu</label>
            </div>
            <div class="form-floating mb-3">
                <input
                    type="password"
                    class="form-control"
                    id="confirmPassword"
                    name="confirmPassword"
                    placeholder="Password"
                    required
                />
                <label for="confirmPassword">Nhập lại mật khẩu</label>
            </div>

            <select name="role" id="role" class="form-select mb-3" aria-label=".form-select-lg example" required>
                <option selected disabled>---Vai trò---</option>
                <option value="writer">writer</option>
                <option value="subscriber">subscriber</option>
                <option value="editor">editor</option>
            </select>

            <div class="d-grid">
                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Đăng ký</button>
            </div>
            <div class="text-bg-info mt-3">Bạn đã có tài khoản? <a href="/login">Đăng nhập</a></div>
        </form>
        <hr class="my-4" />
        <div class="d-grid mb-2">
            <a href="/auth/google" class="d-grid text-decoration-none">
                <button class="btn btn-google btn-login text-uppercase fw-bold text-white" type="submit">
                    <i class="fab fa-google me-2"></i> Đăng nhập với Google
                </button>
            </a>
        </div>
        <div class="d-grid">
            <a href="/auth/facebook" class="d-grid text-decoration-none">
                <button type="submit" class="btn-facebook text-uppercase fw-bold btn text-white btn-login">
                    <i class="fab fa-facebook-f me-2"></i> Đăng nhập với Facebook
                </button>
            </a>
        </div>
        <div class="mt-3">
            <span>Quay về trang chủ</span>
            <a href="/">Trang chủ</a>
        </div>
    </div>
</div>
