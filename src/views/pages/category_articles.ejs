<body>
  <%- include('../components/header') %>

    <!-- <%- include('../components/slideshow') %> -->


    <div class="latest_articles my-5 mx-5">
      <h2>Khám phá những tin tức thuộc chuyên mục <%= category %></h2>
      <ul class="list-group">
        <% articles.forEach(article => { %>
            <li class="list-group-item d-flex align-items-start">
                <div class="image-container">
                    <img src="<%= article.profile_picture %>" class="item-img" alt="<%= article.title %>"/>
                </div>
                <div class="group-item-body ms-3 mt-3">
                    <h5 class="group-item-title">
                        <%= article.title %>
                    </h5>
                    <p class="group-item-text">
                        <%= article.summary %>
                    </p>
                </div>
            </li>
        <% }) %>
        <li class="list-group-item">
          <img src="https://via.placeholder.com/300x200" class="item-img" alt="Article 1">
          <div class="group-item-body">
            <h5 class="group-item-title">Bài viết mới nhất 1</h5>
            <p class="group-item-text">Mô tả ngắn về bài viết.</p>
