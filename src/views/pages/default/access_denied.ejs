<style>
    .access-denied-container {
        text-align: center;
        
        border: 1px solid #dee2e6;
        border-radius: 8px;
        background: #fff;
    }
    .access-denied-container h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #dc3545;
    }
    .access-denied-container p {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }
    .access-denied-container a {
        font-size: 1rem;
        text-decoration: none;
    }
</style>

<div class="access-denied-container mt-5 pb-5">
    <h1>Bạn không có quyền truy cập bài báo này</h1>
    <p><%= message %></p>
    <% if (message === "Bài viết chỉ dành cho độc giả!") { %>
    <a href="/signup" class="btn btn-primary">Đăng ký tại đây</a>
    <% } %>
</div>
