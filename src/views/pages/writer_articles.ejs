<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Article List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/components/header.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        .article-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            height: auto;
            background: white;
            transition: transform 0.2s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .article-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .article-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }

        .card-body {
            padding: 16px;
            position: relative;
            /* Ensure proper positioning */
            margin-top: 20px;
            /* Adjust as needed to clear the badge */
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 8px;
        }

        .card-text {
            font-size: 0.95rem;
            color: #555;
            line-height: 1.5;
        }

        .badge-container {
            position: absolute;
            top: 12px;
            right: 12px;
            z-index: 2;
            /* Ensures the badge stays on top */
        }

        .badge {
            font-size: 0.8rem;
            padding: 6px 8px;
            border-radius: 12px;
        }

        .stretched-link::after {
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            content: "";
            z-index: 1;
        }

        .row.g-3 {
            gap: 16px;
        }

        @media (max-width: 768px) {
            .card-title {
                font-size: 1rem;
            }

            .card-body {
                margin-top: 30px;
                /* Increase space on smaller devices */
            }

            .card-text {
                font-size: 0.85rem;
            }
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">
</head>

<body class="bg-light">
    <%- include('../components/home/header', {user: user}) %>
        <div class="container my-4">
            <div class="row g-3">
                <% articles.forEach(article=> { %>
                    <div class="col-md-10 col-lg-8 mx-auto">
                        <div class="article-card">
                            <% if (article.status==='published' ) { %>
                                <a href="/article/<%- article._id %>" class="stretched-link"></a>
                                <% } else { %>
                                    <a href="/edit_article/<%- article._id %>" class="stretched-link"></a>
                                    <% } %>
                                        <div class="badge-container">

                                            <span
                                                class="badge <%= article.status === 'draft' ? 'bg-secondary' : article.status === 'rejected' ? 'bg-danger' : article.status === 'published' ? 'bg-success' : 'bg-success' %>">
                                                <%= article.status %>
                                            </span>
                                            <% if (article.is_premium) { %>
                                                <span class="badge rounded-pill bg-warning text-dark">Premium</span>
                                                <% } %>
                                        </div>

                                        <div class="row g-0 h-100">
                                            <div class="col-4 col-md-3">
                                                <img src="<%= article.thumbnail %>" class="article-image"
                                                    alt="<%= article.title %>">
                                            </div>
                                            <div class="col-8 col-md-9">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= article.title %>
                                                    </h5>
                                                    <p class="card-text"><%- article.summary %></p>
                                                </div>
                                            </div>
                                        </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <div class="d-flex justify-content-center my-4">
            <nav aria-label="Article Pagination">
                <ul class="pagination">
                    <!-- Previous Page Button -->
                    <% if (page> 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= page - 1 %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span> <!-- Left arrow -->
                            </a>
                        </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <span class="page-link" aria-hidden="true">&laquo;</span>
                            </li>
                            <% } %>

                                <!-- Page Number Text -->
                                <li class="page-item disabled">
                                    <span class="page-link">Page <%= page %> of <%= totalPages %></span>
                                </li>

                                <!-- Next Page Button -->
                                <% if (page < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= page + 1 %>" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span> <!-- Right arrow -->
                                        </a>
                                    </li>
                                    <% } else { %>
                                        <li class="page-item disabled">
                                            <span class="page-link" aria-hidden="true">&raquo;</span>
                                        </li>
                                        <% } %>
                </ul>
            </nav>
        </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/65d6f9b274.js" crossorigin="anonymous"></script>
<script src="/js/header.js"></script>

</html>